/* pages/cart/index.wxss */
page {
  padding-bottom: 90rpx;
}
.revice_address {
  display: flex;
  padding: 20rpx 10rpx;
}
.revice_address .revice_phone {
  text-align: right;
  flex: 1;
}
.cart_main .cart_main_title {
  padding: 20rpx 10rpx;
  color: var(--themeColor);
  font-size: 36rpx;
  font-weight: 600;
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.cart_main .cart_main_content .cart_item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx 0;
}
.cart_main .cart_main_content .cart_item .cart_img_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_main .cart_main_content .cart_item .cart_img_warp image {
  width: 150rpx;
  height: 150rpx;
}
.cart_main .cart_main_content .cart_item .cart_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_warp {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_warp .goods_parice {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 400;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_warp .cart_tool {
  display: flex;
}
.cart_main .cart_main_content .cart_item .cart_info .goods_price_warp .cart_tool .cart_num {
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn_tool {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.btn_tool .total_price_warp {
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
}
.btn_tool .total_price_warp .total_price text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 400;
}
.btn_tool .cart_pay {
  flex: 2;
  background: var(--themeColor);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-weight: 400;
}
